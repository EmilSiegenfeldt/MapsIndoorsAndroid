<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@android:color/transparent"
	android:orientation="horizontal"
	android:paddingTop="10dp"
	>

	<ImageView
		android:id="@+id/directionImageView"
		android:layout_width="20dp"
		android:layout_height="20dp"
		app:srcCompat="@drawable/ic_maneuver_ferry_train"
		android:layout_marginTop="8dp"
		/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/directionTitleTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/grey"
			android:textSize="13sp"
			tools:text="Turn left onto Montague St\nDestination will be on the left"
			/>

		<TextView
			android:id="@+id/directionDistanceTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:textColor="@color/grey"
			android:textSize="13sp"
			tools:text="50m"
			/>
	</LinearLayout>
</LinearLayout>