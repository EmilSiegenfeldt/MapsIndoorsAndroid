<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="45dp"
	android:layout_marginBottom="2dp"
	android:focusable="false"
	android:gravity="center_vertical"
	android:minHeight="45dp"

	android:paddingEnd="16dp"

	tools:context=".ui.components.noInternetBar.NoInternetBar"
	>

	<ImageView
		android:id="@+id/no_internet_logo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_gravity="center"
		android:layout_marginStart="16dp"
		android:maxHeight="40dp"
		android:maxWidth="40dp"
		app:srcCompat="@drawable/ic_cloud_off_black_24dp"/>

	<TextView
		android:id="@+id/no_internet_text"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="52dp"
		android:gravity="start|center_vertical"
		android:text="@string/no_internet_reconnect_message"
		android:textAlignment="textStart"
		android:textAppearance="@style/TextAppearance.AppCompat.Medium"
		android:textColor="@color/blueGray"/>

</RelativeLayout>